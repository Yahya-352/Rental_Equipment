@{
    ViewData["Title"] = "Equipment Rental System - Home";
}

<div class="home-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Equipment Rental Management System</h1>
                <p class="lead">The smart way to rent and manage equipment for your projects</p>
                <a href="/Account/Login" class="btn btn-primary btn-lg mt-3">Get Started</a>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://img.icons8.com/color/240/000000/maintenance.png" alt="Equipment Rental" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-tools" style="font-size: 2rem; color: #0d6efd;"></i>
                    <h3 class="card-title mt-3">Browse Equipment</h3>
                    <p class="card-text">Explore our wide range of equipment available for rent, from power tools to construction equipment.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check" style="font-size: 2rem; color: #0d6efd;"></i>
                    <h3 class="card-title mt-3">Easy Rental Process</h3>
                    <p class="card-text">Submit rental requests with preferred dates and receive notifications about your rental status.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up" style="font-size: 2rem; color: #0d6efd;"></i>
                    <h3 class="card-title mt-3">Track Your Rentals</h3>
                    <p class="card-text">Monitor active rentals, return deadlines, and manage your equipment efficiently.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5 mt-5">
    <div class="container">
        <h2 class="text-center mb-4">How It Works</h2>
        <div class="row">
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                    <h3 class="m-0">1</h3>
                </div>
                <h4>Browse</h4>
                <p>Search for equipment by category or availability</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                    <h3 class="m-0">2</h3>
                </div>
                <h4>Request</h4>
                <p>Submit rental requests with your preferred dates</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                    <h3 class="m-0">3</h3>
                </div>
                <h4>Receive</h4>
                <p>Get approved and pick up your equipment</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                    <h3 class="m-0">4</h3>
                </div>
                <h4>Return</h4>
                <p>Return the equipment and leave feedback</p>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>For Customers</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Browse available equipment by category</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Submit rental requests with preferred dates</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Receive notifications for rental status updates</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Track active rentals and return deadlines</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Return rented items and leave feedback</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h2>For Staff</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Manage rental inventory efficiently</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Process rental requests from customers</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Assign and track equipment for rentals</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Monitor rental durations and overdue items</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Generate reports about customers and rental history</li>
            </ul>
        </div>
    </div>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center mt-5 mb-5">
        <a href="/Account/Register" class="btn btn-outline-primary btn-lg mx-2">Register Now</a>
        <a href="/Account/Login" class="btn btn-primary btn-lg mx-2">Login</a>
    </div>
}