@model IEnumerable<myproject_Library.Model.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<form method="get" asp-action="Index">
    <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Search categories..." />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th> @* ✅ New column *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td> @* ✅ Display description *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>
